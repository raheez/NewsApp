<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.muhammedraheezrahman.newslisting">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/newsicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/newsicon"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">
        <activity android:name=".UI.SplashScreenActvity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.MainActivity"/>
        <activity android:name=".UI.NewsDetailActivity"/>
    </application>

</manifest>